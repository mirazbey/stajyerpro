  String _formatDuration(Duration duration) {
    final minutes = duration.inMinutes.toString().padLeft(2, '0');
    final seconds = (duration.inSeconds % 60).toString().padLeft(2, '0');
    return '$minutes:$seconds';
  }

  String _getDifficultyLabel(String difficulty) {
    switch (difficulty) {
      case 'easy':
        return 'Kolay';
      case 'medium':
        return 'Orta';
      case 'hard':
        return 'Zor';
      case 'all':
      default:
        return 'Karışık';
    }
  }

  Future<void> _handleDifficultyChange(String newDifficulty) async {
    // Kullanıcıya uyarı göster
    final confirmed = await showDialog<bool>(
      context: context,
      builder: (context) => AlertDialog(
        title: const Text('Zorluk Seviyesi Değiştir'),
        content: Text(
          'Zorluk seviyesini \"${_getDifficultyLabel(newDifficulty)}\" olarak değiştirmek istediğinize emin misiniz?\n\nMevcut ilerlemeniz sıfırlanacak ve yeni sorular yüklenecek.',
        ),
        actions: [
          TextButton(
            onPressed: () => Navigator.pop(context, false),
            child: const Text('İptal'),
          ),
          TextButton(
            onPressed: () => Navigator.pop(context, true),
            child: const Text('Değiştir'),
          ),
        ],
      ),
    );

    if (confirmed == true && mounted) {
      // State'i güncelle
      ref.read(quizStateProvider.notifier).changeDifficulty(newDifficulty);
      
      // Yeni soruları yükle
      final repository = ref.read(quizRepositoryProvider);
      try {
        List<QuestionModel> questions;

        if (widget.topicIds.isEmpty) {
          questions = await repository.getRandomQuestions(
            limit: widget.questionCount,
            difficulty: newDifficulty,
          );
        } else {
          questions = await repository.getQuestionsByTopics(
            topicIds: widget.topicIds,
            limit: widget.questionCount,
            difficulty: newDifficulty,
          );
        }

        if (questions.isEmpty && mounted) {
          ScaffoldMessenger.of(context).showSnackBar(
            const SnackBar(
              content: Text('Bu zorluk seviyesinde soru bulunamadı'),
            ),
          );
          return;
        }

        ref.read(quizStateProvider.notifier).setQuestions(
          questions,
          difficulty: newDifficulty,
        );

        // Süreyi sıfırla
        _timer?.cancel();
        setState(() {
          _elapsed = Duration.zero;
        });
        _startTimer();
        
        if (mounted) {
          ScaffoldMessenger.of(context).showSnackBar(
            SnackBar(
              content: Text(
                'Zorluk seviyesi \"${_getDifficultyLabel(newDifficulty)}\" olarak değiştirildi',
              ),
              duration: const Duration(seconds: 2),
            ),
          );
        }
      } catch (e) {
        if (mounted) {
          ScaffoldMessenger.of(context).showSnackBar(
            SnackBar(
              content: Text('Sorular yüklenirken hata: $e'),
            ),
          );
        }
